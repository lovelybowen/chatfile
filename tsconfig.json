{
  "compilerOptions": {
    "allowJs": true,
    "moduleResolution": "node",
    "module": "nodenext",
    "outDir": "./dist",
    "lib": ["ESNext"],
    "target": "ES2020",
    "removeComments": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],
    "baseUrl": ".",
    "paths": {
      "configs/*": ["./configs/*"],
      "app": ["app"]
    },
  },
  "compileOnSave": false,
  "include": [
    "app/**/*",
    "configs/**/*",
    "**/*.ts",
    "**/*.tsx"
  ],
  "files": [
    "app.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
